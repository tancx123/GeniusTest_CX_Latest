<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_computer_science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/roboto"
                android:text="Computer Science"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView_course"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_science"
                tools:ignore="VectorDrawableCompat" />

            <Button
                android:id="@+id/btnStartCourse"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="20dp"
                android:text="Start Course"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:background="@drawable/course_button"
                android:backgroundTint="@android:color/white"/>

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textSize="20dp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="163dp"/>

            <TextView
                android:id="@+id/tv_overview_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="@string/computerScience"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/tv_topicCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic Covered"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/topicCover"
                android:fontFamily="@font/roboto"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/TopicOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binary"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"/>

            <Button
                android:id="@+id/btnTopicOne"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/course_button"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/ic_science"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/topicContent"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>