<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tutor.EditCourse">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="135dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="270dp"
                android:layout_marginRight="270dp"
                app:srcCompat="@android:color/darker_gray" />

            <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="150dp"
            android:padding="3dp"
            android:text="Edit Photo"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto"
            android:background="@drawable/course_button"
            android:backgroundTint="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textView_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="20dp"
            android:text="Course Name : "
            android:textSize="16dp"
            android:textColor="@color/text"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_courseName"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="130dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Overview : "
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-45dp"
            android:layout_marginRight="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Overview"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic Covered : "
            android:textSize="16dp"
            android:textColor="@color/text"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

        <Spinner
            android:id="@+id/spnTopicCover"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="130dp"/>

            <TextView
                android:id="@+id/tv_editTopicOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binary"
                android:textColor="@color/text"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/btnEditTopicOne"
                android:layout_width="275dp"
                android:layout_height="150dp"
                android:background="@drawable/course_button"
                android:backgroundTint="@android:color/holo_blue_light"
                android:drawableTop="@drawable/ic_binary"
                android:paddingTop="15dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/BinaryContent" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>